<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_itemLoanDetail_amountOwed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="$0.0"
        app:layout_constraintEnd_toStartOf="@+id/textView_itemLoanDetail_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_itemLoanDetail_amountPaidLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="Amount Paid:"
        app:layout_constraintEnd_toStartOf="@+id/textView_itemLoanDetail_amountPaid"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView_itemLoanDetail_amountOwed"
        app:layout_constraintTop_toBottomOf="@+id/textView_itemLoanDetail_amountOwed" />

    <TextView
        android:id="@+id/textView_itemLoanDetail_amountPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.0"
        app:layout_constraintEnd_toStartOf="@+id/textView_itemLoanDetail_dateLastRepaidLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_itemLoanDetail_amountPaidLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_itemLoanDetail_amountPaidLabel" />

    <TextView
        android:id="@+id/textView_itemLoanDetail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="00/00/0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_itemLoanDetail_amountOwed" />

    <TextView
        android:id="@+id/textView_itemLoanDetail_dateLastRepaidLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Last Repayment:"
        app:layout_constraintEnd_toStartOf="@+id/textView_itemLoanDetail_dateLastRepaid"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_itemLoanDetail_amountPaid"
        app:layout_constraintTop_toTopOf="@+id/textView_itemLoanDetail_amountPaid" />

    <TextView
        android:id="@+id/textView_itemLoanDetail_dateLastRepaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00/00/0000"
        app:layout_constraintEnd_toEndOf="@+id/textView_itemLoanDetail_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_itemLoanDetail_dateLastRepaidLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_itemLoanDetail_dateLastRepaidLabel" />

    <Switch
        android:id="@+id/switch_itemLoanDetail_forgiveDebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Forgive Debt"
        app:layout_constraintStart_toStartOf="@+id/textView_itemLoanDetail_amountPaidLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_itemLoanDetail_amountPaidLabel" />

    <TextView
        android:id="@+id/textView_itemLoanDetail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="Loading..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/switch_itemLoanDetail_forgiveDebt"
        app:layout_constraintTop_toBottomOf="@+id/switch_itemLoanDetail_forgiveDebt" />

</androidx.constraintlayout.widget.ConstraintLayout>